<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tempo_1jugador"
    android:orientation="vertical"
    android:background="@drawable/fondo3"
    tools:ignore="MissingDefaultResource">

    <Button
        android:id="@+id/empezar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Iniciar"
        android:layout_gravity="center"
        android:background="@drawable/btn_ritmo"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rondas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/j1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="60dp"
        android:text="@string/jugador1"
        android:textSize="40sp"
        android:background="@drawable/boton"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/j1p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/negro"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/resul"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_resultados"
            android:text="Ver resultados"/>
    </LinearLayout>

</LinearLayout>